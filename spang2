FROM ubuntu:20.04

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends curl git \
                                     wget default-jre-headless libgetopt-complete-perl \
    && rm -rf /var/lib/apt/lists/*

RUN curl -LsSf https://deb.nodesource.com/setup_12.x | bash -
RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends nodejs \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /opt
RUN git clone https://github.com/hchiba1/spang
WORKDIR spang
RUN npm install && npm link

RUN mkdir /work
WORKDIR /work

CMD ["spang2"]
